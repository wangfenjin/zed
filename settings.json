// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "context_servers": {
    "mcp-server-context7": {
      "settings": {
        "default_minimum_tokens": "10000"
      }
    }
  },
  "minimap": {
    "show": "auto"
  },
  "telemetry": {
    "metrics": false
  },
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "git_panel": {
    "dock": "right"
  },
  "agent": {
    "default_profile": "ask",
    "model_parameters": [],
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.7-sonnet"
    },
    "version": "2"
  },
  "theme": "One Dark",
  "base_keymap": "VSCode",
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_family": "FiraCode Nerd Font",
  "buffer_font_size": 16,
  "collaboration_panel": {
    "button": false
  },
  "tab_bar": {
    "show": false
  },
  "gutter": {
    "line_numbers": true,
    "code_actions": false,
    "runnables": false,
    "breakpoints": false,
    "folds": false
  },
  "use_smartcase_search": true,
  "relative_line_numbers": true,
  "show_completions_on_input": true,
  "notification_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "terminal": {
    "copy_on_select": true
  },
  "preferred_line_length": 100,
  "chat_panel": {
    "button": "never"
  }
}
